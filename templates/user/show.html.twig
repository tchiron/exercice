{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Adresses</th>
                <td>
                    <ul>
                        {% for adress in user.adresses %}
                            <li>{{ adress.content }}</li>
                        {% else %}
                            {{ 'No data' }}
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>VÃ©hicules</th>
                <td>
                    <ul>
                        {% for vehicule in user.vehicules %}
                            <li>{{ vehicule.immatriculation }}</li>
                        {% else %}
                            {{ 'No data' }}
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_adress_new', {'id': user.id}) }}">Add adress</a>
    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
